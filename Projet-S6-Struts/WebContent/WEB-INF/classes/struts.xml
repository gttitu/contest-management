<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.devMode" value="true"></constant>
	<package name="default" strict-method-invocation="false" namespace="/" extends="struts-default">
		<default-action-ref name="index"></default-action-ref>
		<action name="index">
			<exception-mapping result="error" exception="java.lang.Exception"></exception-mapping>
			<result name="success">/views/index.jsp</result>
			<result name="error">/views/error.jsp</result>
		</action>
		<action name="getCandidates" class="gtt.controller.CandidateAction" method="findCandidates">
			<!-- <exception-mapping result="error" exception="java.lang.Exception"></exception-mapping> -->
			<result name="success">/views/candidate.jsp</result>
			<result name="error">/views/error.jsp</result>
		</action>
		<action name="saveCandidate" class="gtt.controller.CandidateAction" method="insertCandidate">
			<exception-mapping result="error" exception="java.lang.Exception"></exception-mapping>
			<result name="success">/views/candidate.jsp</result>
			<result name="error">/views/error.jsp</result>
		</action>
	</package>
</struts>